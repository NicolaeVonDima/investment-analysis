{
  "version": "1.0.0",
  "description": "Initial ruleset for investment analysis",
  "created_at": "2025-01-01",
  "metrics": [
    {
      "name": "market_cap",
      "description": "Market capitalization (current price Ã— shares outstanding)",
      "category": "valuation",
      "formula": "current_price * shares_outstanding",
      "unit": "USD"
    },
    {
      "name": "pe_ratio",
      "description": "Price-to-Earnings ratio",
      "category": "valuation",
      "formula": "trailingPE or forwardPE",
      "unit": "ratio"
    },
    {
      "name": "price_to_book",
      "description": "Price-to-Book ratio",
      "category": "valuation",
      "formula": "priceToBook",
      "unit": "ratio"
    },
    {
      "name": "dividend_yield",
      "description": "Dividend yield percentage",
      "category": "income",
      "formula": "dividendYield * 100",
      "unit": "percent"
    },
    {
      "name": "profit_margin",
      "description": "Profit margin percentage",
      "category": "profitability",
      "formula": "profitMargins * 100",
      "unit": "percent"
    },
    {
      "name": "revenue_growth",
      "description": "Revenue growth percentage",
      "category": "growth",
      "formula": "revenueGrowth * 100",
      "unit": "percent"
    }
  ],
  "sec_alert_rules": [
    {
      "id": "revenue_down_10pct",
      "metric_key": "revenue",
      "direction": "down",
      "threshold_pct": -0.1,
      "severity": "high",
      "message": "Revenue down more than 10% vs prior period."
    },
    {
      "id": "net_income_down_15pct",
      "metric_key": "net_income",
      "direction": "down",
      "threshold_pct": -0.15,
      "severity": "high",
      "message": "Net income down more than 15% vs prior period."
    },
    {
      "id": "gross_margin_down_200bps",
      "metric_key": "gross_margin_pct",
      "direction": "down",
      "threshold_abs": -2.0,
      "severity": "medium",
      "message": "Gross margin down more than 200 bps."
    },
    {
      "id": "debt_up_20pct",
      "metric_key": "total_debt",
      "direction": "up",
      "threshold_pct": 0.2,
      "severity": "medium",
      "message": "Total debt up more than 20% vs prior period."
    },
    {
      "id": "operating_cf_down_20pct",
      "metric_key": "operating_cash_flow",
      "direction": "down",
      "threshold_pct": -0.2,
      "severity": "medium",
      "message": "Operating cash flow down more than 20% vs prior period."
    },
    {
      "id": "risk_going_concern",
      "metric_key": "risk_going_concern",
      "direction": "present",
      "severity": "high",
      "message": "Going concern risk disclosed."
    },
    {
      "id": "risk_material_weakness",
      "metric_key": "risk_material_weakness",
      "direction": "present",
      "severity": "high",
      "message": "Material weakness disclosed."
    }
  ]
}
